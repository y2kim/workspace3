		<% 
		String ids = (String)session.getAttribute("loginId");
		String getip = request.getRemoteAddr();
		BoradDAO bdao = new BoradDAO();
		BorderInfos bifs = new BorderInfos();
		bifs.setWriter(ids);
		bifs.setIp(getip);
		bifs.setTitle(request.getParameter("title"));
		bifs.setContents(request.getParameter("contents"));
		bifs.setViewcount(0);
		int result =  bdao.insertBorder(bifs);
		%>
		<script>
		<%if(result>0) { %>
		 alert("성공적으로 글이 작성이 되었습니다");
		<%}%>
		</script>
</body>
