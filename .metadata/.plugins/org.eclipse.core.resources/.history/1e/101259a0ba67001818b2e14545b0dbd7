 <script >
   
   document.getElementById("done").onclick = function(){
	   document.getElementById("borad").submit();
   }
    document.getElementById("cancle").onclick = function(){
       location.href="../BorderList.jsp";
    }
    
    files = 0;
    document.getElementById("addfile").onclick = function(){
 	   files++;
 	   if(files > 5){
 		   alert("5개 이상 추가 하실수 없습니다");
 		   
 	   }else{
 	   var objTo = document.getElementById('fuckfile')
 	   var trtest = document.createElement("tr");
 	   trtest.innerHTML = "<tr><td>첨부파일</td><td><input type=\"file\" name=\"file"+files+"\"></td></tr>"
 	   
 	   objTo.appendChild(trtest)
       }
    }
    
    document.getElementById("minfile").onclick = function(){
  	   files--;
  	   if(files < 0){
  		 alert("없앨수 없는 파일이  없습니다.");
  		   
  	   }else{
  		 var objTo = document.getElementsByName("file"+files)
  		  objTo.remove()
        }
     }

 </script>
