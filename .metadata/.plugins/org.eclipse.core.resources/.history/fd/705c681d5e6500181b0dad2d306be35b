package bean;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class FileDao {
	
	public Connection dbConnect() throws Exception {
		Class.forName("oracle.jdbc.driver.OracleDriver");
		String DB_URL = "jdbc:oracle:thin:@127.0.0.1:1521:XE";
		String DB_USER = "kh";
		String DB_PASSWORD = "kh";
		
		return  DriverManager.getConnection(DB_URL, DB_USER, DB_PASSWORD);
	}
	
	public int insertFileData() throws Exception {
		Connection cons = dbConnect();
		String sql = "insert into upfile values(?,?,?,?)";
		PreparedStatement pst = cons.prepareStatement(sql);
		int result = pst.executeUpdate();
		
		cons.commit();
		pst.close();
		cons.close();
		return result;
	}
	
	public void selectFileData() throws Exception {
		
	}
	
}
