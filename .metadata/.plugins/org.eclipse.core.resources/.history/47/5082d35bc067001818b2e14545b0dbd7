<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
 <script >
   
   document.getElementById("done").onclick = function(){
	   document.getElementById("borad").submit();
   }
    document.getElementById("cancle").onclick = function(){
       location.href="../BorderList.jsp";
    }
    
    files = 0;
    $("#addfile").click(function(){
 	   files++;
 	   if(files > 5){
 		   alert("5개 이상 추가 하실수 없습니다");
 		   
 	   }else{}
 	   
 	   var objTo = $('#putfile')
 	   $("tr#item1").show();
 	   var lastItemNo = $("#example tr:last").attr("id").replace("item", "");
 	   var newitem = $("#example tr:eq(1)").clone();
 	   if(lastItemNo==5){
          //그리고 해당 아이템은 5개 이상 생성할수 없도록 제한
              alert("5개 이상 파일 추가 하실 수 없습니다.");
          }else{
          $("#example").append(newitem);
          }
      });
    });
    
    $("#minfile").click(function(){
  	   if(files < 0){
  		 alert("없앨수 없는 파일이  없습니다.");
  		   
  	   }else{
  		 var objTo = $("#fileid"+files)
  		  objTo.remove();
        }
  	   files--;
     });

 </script>
