    files = 0;
    $("#addfile").click(function(){
 	   files++;
 	   if(files > 5){
 		   alert("5개 이상 추가 하실수 없습니다");
 		   
 	   }else{
 		  var line = $("<tr id=tr" + files +"><td><input type=file id=file"+files+">"+
			"<input type=button class=delete value='-'></tr>");
			$("#thead").after(line);   
 	   }
      });	

    
    $(document).on('click','.delete',function(e){
			$("#tr"+id).remove();
