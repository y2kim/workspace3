    <script>

    document.getElementById("inid").oninput = function(){
       var textval = document.getElementById("inid").value;
       var regex = /^[^a-zA-Z]{0,}.+?[^a-zA-Z0-9]{2,19}/g;
       if(regex.test(textval)){
           var change = document.getElementById("inid").value.replace(/^[^a-zA-Z]{0,}.+?[^a-zA-Z0-9]{2,19}/g,"");
           document.getElementById("inid").value = change;
           alert("영어와숫자조합 20까지 가능합니다 [첫자는 영어로만]");
       }
   }
    	document.getElementById("chk").onclick = function(){
            window.open("chkPopId.jsp?id="+document.getElementById("inid").value,"_blank", "width=400,height=300");
        }

    	document.getElementById("sign").onclick = function(){
    		var idval = document.getElementById("okid").value;
    		var pwval = document.getElementById("bothpw").value;
    		var nameval = document.getElementById("okname").value;
          	if(idval == 'ok' && pwval == 'match' && nameval == 'name'){
          		document.getElementById("forms").submit();
          	}else{
          		alert("아이디,비밀번호,이름 3가지는 필수로 넣어주세요");
          	}
        }

        document.getElementById("chkpw").onkeyup = function(){
            var valkey1 = document.getElementById("inpw").value;
            var valkey2 = document.getElementById("chkpw").value;
             if (valkey1 == valkey2) {
                document.getElementById("bothpw").value = "match";
                document.getElementById("bothpw").style.color = "blue";
            } else {
                document.getElementById("bothpw").value = "notmatch";
                document.getElementById("bothpw").style.color = "red";
            }
        }

        document.getElementById("name").onkeyup = function(){
            var valkey1 = document.getElementById("name").value;
             if (valkey1 == '' && valkey1 == ' ' ) {
                document.getElementById("okname").value = "noname";
                document.getElementById("okname").style.color = "red";
            } else {
                document.getElementById("okname").value = "name";
                document.getElementById("okname").style.color = "blue";
            }
        }

         document.getElementById("name").oninput = function(){
            var textval = document.getElementById("name").value;
            var regex = /[^ㄱ-힣]/;
            if(regex.test(textval)){
                var change = document.getElementById("name").value.replace(/[^ㄱ-힣]/g,"");
                document.getElementById("name").value = change;
                alert("한글만 집어넣어주세요");
            }
        }

        document.getElementById("sample6_address2").onkeyup = function(){
            var textval = document.getElementById("sample6_address2").value;
            var regex = /[a-zA-Z]/;
            if(regex.test(textval)){
                var change = document.getElementById("sample6_address2").value.replace(/[a-zA-Z]/g,"");
                document.getElementById("sample6_address2").value = change;
                alert("영어는 입력불가능합니다");
            }
        }

        document.getElementById("phone1").oninput = function(){
            var textval = document.getElementById("phone1").value;
            var regex = /[^0-9]/g;
            var regex2 = /[0-9]{5}/;
            if(regex.test(textval)){
                var change = document.getElementById("phone1").value.replace(/[^0-9]/g,"");
                document.getElementById("phone1").value = change;
            }
            if(regex2.test(textval)){
                var change = document.getElementById("phone1").value.replace(/[0-9]{5}$/,"");
                document.getElementById("phone1").value = change;
                alert("4개까지 가능합니다.");
            }
        }
        document.getElementById("phone2").oninput = function(){
            var textval = document.getElementById("phone2").value;
            var regex = /[^0-9]/g;
            var regex2 = /[0-9]{5}/;
            if(regex.test(textval)){
                var change = document.getElementById("phone2").value.replace(/[^0-9]/g,"");
                document.getElementById("phone2").value = change;
            }
            if(regex2.test(textval)){
                var change = document.getElementById("phone2").value.replace(/[0-9]{5}$/,"");
                document.getElementById("phone2").value = change;
                alert("4개까지 가능합니다.");
            }
        }
         function sample6_execDaumPostcode() {
        new daum.Postcode({
            oncomplete: function(data) {
                // 팝업에서 검색결과 항목을 클릭했을때 실행할 코드를 작성하는 부분.

                // 각 주소의 노출 규칙에 따라 주소를 조합한다.
                // 내려오는 변수가 값이 없는 경우엔 공백('')값을 가지므로, 이를 참고하여 분기 한다.
                var fullAddr = ''; // 최종 주소 변수
                var extraAddr = ''; // 조합형 주소 변수

                // 사용자가 선택한 주소 타입에 따라 해당 주소 값을 가져온다.
                if (data.userSelectedType === 'R') { // 사용자가 도로명 주소를 선택했을 경우
                    fullAddr = data.roadAddress;

                } else { // 사용자가 지번 주소를 선택했을 경우(J)
                    fullAddr = data.jibunAddress;
                }

                // 사용자가 선택한 주소가 도로명 타입일때 조합한다.
                if(data.userSelectedType === 'R'){
                    //법정동명이 있을 경우 추가한다.
                    if(data.bname !== ''){
                        extraAddr += data.bname;
                    }
                    // 건물명이 있을 경우 추가한다.
                    if(data.buildingName !== ''){
                        extraAddr += (extraAddr !== '' ? ', ' + data.buildingName : data.buildingName);
                    }
                    // 조합형주소의 유무에 따라 양쪽에 괄호를 추가하여 최종 주소를 만든다.
                    fullAddr += (extraAddr !== '' ? ' ('+ extraAddr +')' : '');
                }

                // 우편번호와 주소 정보를 해당 필드에 넣는다.
                document.getElementById('sample6_postcode').value = data.zonecode; //5자리 새우편번호 사용
                document.getElementById('sample6_address').value = fullAddr;
                // 커서를 상세주소 필드로 이동한다.
                document.getElementById('sample6_address2').focus();
            }
        }).open();


    }
    </script>
